<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
    	<div>
    		<h1><%= title %></h1>
    	</div>
    </header>

     <section>
     	<div>
     		<form action="/add" method="post">
     			<legend>Incluir nova tarefa</legend>
     			<input type="text" name="title" placeholder="Título">
     			<textarea name="description" id="" cols="30" rows="10" placeholder="Descrição"></textarea>
     			<button type="submit">+ adicionar</button>
     		</form>
     	</div>

     	<div>
     		<table>
     		    <tbody>
     		       <% for(var i=0; i < tasks.length; i++) { %>
     		    	<tr>
     		    		<td>#<%= i+1 %><strong><%= tasks[i].title %></strong></td>
								 <td><a href="/turn/<%= tasks[i]._id %>" class="<%= tasks[i].status ? '' : 'color-red' %>">
									<%= tasks[i].status ? 'Ok' : 'Não Feito' %>
											</a></td>
     		    		<td><%= tasks[i].description %></td>
     		    	</tr>
     		    	<% } %>
     		    </tbody>
     			
     		</table>
     	</div>
     </section>
  </body>
</html>
